# Root Environment Variables
# Copy this file to .env and update the values

# Workspace Configuration
NODE_ENV=development
PORT=3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_HOST_URL=http://localhost:3000
NEXT_PUBLIC_PRODUCTS_URL=http://localhost:3001
NEXT_PUBLIC_BASKET_URL=http://localhost:3002

# Module Federation Configuration
NEXT_PUBLIC_FEDERATION_HOST=host@http://localhost:3000/_next/static/chunks/remoteEntry.js
NEXT_PUBLIC_FEDERATION_PRODUCTS=products_remote@http://localhost:3001/_next/static/chunks/remoteEntry.js
NEXT_PUBLIC_FEDERATION_BASKET=basket_remote@http://localhost:3002/assets/remoteEntry.js

# Development Configuration
TURBO_TEAM=your-team-name
TURBO_TOKEN=your-turbo-token

# Build Configuration
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# Testing Configuration
VITEST_WORKER_THREADS=4
PLAYWRIGHT_BROWSERS_PATH=0

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false 