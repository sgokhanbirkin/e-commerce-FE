# Basket Application Environment Variables
# Copy this file to .env.local and update the values

# Application Configuration
VITE_APP_NAME=Basket Remote
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Server Configuration
PORT=3002
HOSTNAME=localhost

# API Configuration
VITE_API_URL=http://localhost:8080/api
VITE_BASKET_URL=http://localhost:3002

# Module Federation Configuration
VITE_FEDERATION_HOST=host@http://localhost:3000/_next/static/chunks/remoteEntry.js
VITE_FEDERATION_PRODUCTS=products_remote@http://localhost:3001/_next/static/chunks/remoteEntry.js

# Build Configuration
ANALYZE=false
BUNDLE_ANALYZER=false

# Development Configuration
NODE_ENV=development
VITE_DEBUG=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=true 