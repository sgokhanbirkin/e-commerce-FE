# Products Application Environment Variables
# Copy this file to .env.local and update the values

# Application Configuration
NEXT_PUBLIC_APP_NAME=Products Remote
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# Server Configuration
PORT=3001
HOSTNAME=localhost

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_PRODUCTS_URL=http://localhost:3001

# Module Federation Configuration
NEXT_PUBLIC_FEDERATION_HOST=host@http://localhost:3000/_next/static/chunks/remoteEntry.js
NEXT_PUBLIC_FEDERATION_BASKET=basket_remote@http://localhost:3002/assets/remoteEntry.js

# Build Configuration
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false
BUNDLE_ANALYZER=false

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=true 