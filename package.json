{
  "name": "kayra-export-e-commerce",
  "version": "1.0.0",
  "description": "E-commerce monorepo with Next.js host and remote applications",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:host": "cd apps/host && dotenv -e .env.local -- pnpm dev",
    "dev:products": "cd apps/products && dotenv -e .env.local -- pnpm dev",
    "dev:basket": "cd apps/basket && dotenv -e .env.local -- pnpm dev",
    "dev:all": "concurrently \"pnpm dev:host\" \"pnpm dev:products\" \"pnpm dev:basket\"",
    "build": "turbo run build",
    "build:host": "cd apps/host && dotenv -e .env.local -- pnpm build",
    "build:products": "cd apps/products && dotenv -e .env.local -- pnpm build",
    "build:basket": "cd apps/basket && dotenv -e .env.local -- pnpm build",
    "build:libs": "turbo run build --filter=./libs/*",
    "start": "turbo run start",
    "start:host": "cd apps/host && dotenv -e .env.local -- pnpm start",
    "start:products": "cd apps/products && dotenv -e .env.local -- pnpm start",
    "start:basket": "cd apps/basket && dotenv -e .env.local -- pnpm start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "turbo run lint --dry-run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "test:watch": "turbo run test --watch",
    "test:coverage": "turbo run test --coverage",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "turbo run clean && rm -rf node_modules && rm -rf .turbo",
    "type-check": "turbo run type-check",
    "type-check:watch": "turbo run type-check --watch",
    "install:all": "pnpm install && pnpm install --filter=./apps/* && pnpm install --filter=./libs/*",
    "setup": "pnpm install:all && pnpm build:libs && pnpm lint:fix",
    "prepare": "husky install",
    "storybook": "cd libs/ui && pnpm storybook",
    "storybook:build": "cd libs/ui && pnpm build-storybook",
    "docker:build": "docker build -t kayra-ecommerce .",
    "docker:run": "docker run -p 3000:3000 kayra-ecommerce",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "analyze": "ANALYZE=true pnpm build",
    "federation:check": "node scripts/check-federation.js",
    "federation:build": "pnpm build:host && pnpm build:products && pnpm build:basket",
    "federation:start": "pnpm start:host && pnpm start:products && pnpm start:basket",
    "setup:env": "node scripts/setup-env.js",
    "test:api": "node scripts/test-api-endpoints.js",
    "test:auth": "node scripts/test-auth-context.js",
    "test:auth-pages": "node scripts/test-auth-pages.js",
    "test:integration": "node scripts/test-products-basket-integration.js",
    "test:federation": "node scripts/test-module-federation.js"
  },
  "devDependencies": {
    "turbo": "^1.12.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}